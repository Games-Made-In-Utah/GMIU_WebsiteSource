@{
    ViewData["Title"] = "Game Development Groups";
}

<div class="container">
    <h2 class="text-center my-4">Utah Game Development Groups</h2>

    <!-- Utah Gaming Society -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h4>Utah Gaming Society</h4>
            <p>This group is for the 801, 435, and 385 gamers to connect and become friends.</p>
            <a href="https://steamcommunity.com/groups/utahgamingsociety" class="btn btn-primary" target="_blank">Join the Group</a>
        </div>
    </div>

    <!-- Utah Gamers -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h4>Utah Gamers</h4>
            <p>Utah Gamers is a large local gaming community in Utah consisting of video gamers, tabletop gamers, and everything in between.</p>
            <a href="https://www.facebook.com/groups/GamersOfUtah/" class="btn btn-primary" target="_blank">Join the Group</a>
        </div>
    </div>

    <!-- Utah Indie Games Group -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h4>Utah Indie Games</h4>
            <p>Utah Indie Games is a community of independent game developers in Utah. They organize meetups, workshops, and game jams.</p>
            <a href="https://www.meetup.com/UtahIndieGames/" class="btn btn-primary" target="_blank">Join the Group</a>
        </div>
    </div>

    <!-- Utah Game Audio Group -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h4>Utah Game Audio</h4>
            <p>Utah Game Audio is a community for sound designers, composers, and audio professionals working in the game industry in Utah.</p>
            <a href="https://www.meetup.com/UtahGameAudio/" class="btn btn-primary" target="_blank">Join the Group</a>
        </div>
    </div>

    <!-- IGDA Utah Chapter -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h4>IGDA Utah Chapter</h4>
            <p>The Utah chapter of the International Game Developers Association (IGDA) supports game developers across all disciplines by hosting regular events and offering resources for professional growth.</p>
            <a href="https://www.igda.org/slc" class="btn btn-primary" target="_blank">Learn More</a>
        </div>
    </div>

    <!-- Timp Game Dev Club -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h4>Timpanogos Game Dev Club</h4>
            <p>A club for all Utah game developers! Open to professionals, indies, amateurs, hobbyists, students, and gamers.</p>
            <a href="https://www.meetup.com/timpanogos-game-dev-club/" class="btn btn-primary" target="_blank">Join the Group</a>
        </div>
    </div>

    <!-- SLC Game Devs -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h4>SLC Game Devs</h4>
            <p>The purpose of this group is to bring game developers in the Salt Lake City area (and beyond) together to collaborate and socialize.</p>
            <a href="https://www.facebook.com/groups/394016969484545/" class="btn btn-primary" target="_blank">Join the Group</a>
        </div>
    </div>

    <!-- Add more groups as needed -->
</div>
