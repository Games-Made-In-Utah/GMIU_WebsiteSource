@{
    ViewData["Title"] = "Game Development Groups";
}

<div class="container">
    <h2 class="text-center my-4">Utah Game Development Groups</h2>

    <!-- Utah Indie Games Group -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h4>Utah Indie Games</h4>
            <p>Utah Indie Games is a community of independent game developers in Utah. They organize meetups, workshops, and game jams.</p>
            <a href="https://www.meetup.com/UtahIndieGames/" class="btn btn-primary" target="_blank">Join the Group</a>
        </div>
    </div>

    <!-- Utah Game Audio Group -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h4>Utah Game Audio</h4>
            <p>Utah Game Audio is a community for sound designers, composers, and audio professionals working in the game industry in Utah.</p>
            <a href="https://www.meetup.com/UtahGameAudio/" class="btn btn-primary" target="_blank">Join the Group</a>
        </div>
    </div>

    <!-- IGDA Utah Chapter -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h4>IGDA Utah Chapter</h4>
            <p>The Utah chapter of the International Game Developers Association (IGDA) supports game developers across all disciplines by hosting regular events and offering resources for professional growth.</p>
            <a href="https://www.igda.org/slc" class="btn btn-primary" target="_blank">Learn More</a>
        </div>
    </div>
    <!-- Game Devs of Utah -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h4>Game Devs of Utah</h4>
            <p>Game Devs of Utah is a vibrant community of game developers in Utah. They host regular social meetups and game showcase events.</p>
            <a href="https://www.gamedevsutah.com/" class="btn btn-primary" target="_blank">Join the Group</a>
        </div>
    </div>

    <!-- Add more groups as needed -->
</div>
