@{
    ViewData["Title"] = "Utah's Game Dev Guild";

    var indies = new[]
    {
        new { Name = "Small Solar Sloth Studios", Game = "Snail Simulator", Image = "/images/SnailSimulator.png", Url = "https://store.steampowered.com/app/1500740/Snail_Simulator/",
        Description = "Have you ever wanted to be a snail? Now you can be! Explore the vast Snearth with snail friends! Join monthly Snail Parties! MMOS (Massive Multiplayer Online Snails)! BECOME a snail (in a simulation)!!" },
        new { Name = "Familiars.io", Game = "Familiars.io", Image = "/images/Familiars.png", Url = "https://www.familiars.io/",
        Description = "A unique online game where players collect and battle fantastical creatures known as Familiars." },
        new { Name = "Kogoy Galaxy", Game = "Moniker", Image = "/images/Moniker.png", Url = "https://kogoy.com/", 
        Description = "Kogoy Galaxy creates interactive and innovative games that blur the lines between creativity and strategy." },
        new { Name = "Oakie Studio", Game = "It's A Game Changer", Image = "/images/ItsAGameChanger.png", Url = "https://store.steampowered.com/app/1914330/Sprites_at_Play/",
        Description = "Fast platforming, people hiding, others seeking. If you are the last one to be found you win!" },
        new { Name = "Frostbane Studios", Game = "Airlock Arena & Purrseus", Image = "/images/FrostBaneStudios.png", Url = "https://frostbane.com/",
        Description = "A studio known for its action-packed games like Airlock Arena and the adorable Purrseus." },
        new { Name = "Lotus Mountain Creative", Game = "Narcalid", Image = "/images/LotusMtn.png", Url = "https://store.steampowered.com/app/2341110/Narcalid/?beta=0",
        Description = "Narcalid is a puzzle platformer with peaceful exploration and mighty challenges in a strange, unknown world. Use real-life meditation skills in compelling spiritual narratives to open the gateway to Earth before Mother Narcalid becomes unstoppable!" },
        new { Name = "D20 Studios", Game = "Abalon", Image = "/images/abalon.png", Url = "https://d20studios.com/", Description = "D20 Studios brings classic RPG vibes with modern twists, exemplified by their strategic and fantasy-rich game Abalon." },
        new { Name = "Justin Whitchurch", Game = "Table Top Creature Tracker", Image = "/images/TTCTgameImage.jpeg", Url = "https://store.steampowered.com/app/3013280/Table_Top_Creature_Tracker/",
        Description = "Roll for initiative! This is a lightweight and easy-to-use Game Master's companion tool that won't interrupt the flow of your tabletop roleplaying game, and holds everything you'll need to stay organized and focused on your game." },
        new { Name = "Flat Red Ball", Game = "The Incredible Baron", Image = "/images/TheIncredibleBaronHeader.jpg", Url = "https://store.steampowered.com/app/441510/The_Incredible_Baron/",
        Description = "The Incredible Baron combines real-time strategy gameplay with over 45 collectible animal species in a tale of exploration, science, and betrayal." }
    };
}

<div class="container">
    <h2 class="text-center my-4 text-glow">Utah's Game Dev Guild</h2>
    <p class="text-center mb-5 lead text-neon">Discover the Legendary Creators Shaping Utah's Gaming Realm</p>
    <div class="row">
        @foreach (var indie in indies)
        {
            <div class="col-md-4 mb-4">
                <div class="card game-card h-100">
                    <div class="card-image-wrapper">
                        <img src="@indie.Image" class="card-img-top" alt="@indie.Game">
                        <div class="card-overlay">
                            <span class="card-studio">@indie.Name</span>
                        </div>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@indie.Game</h5>
                        <p class="card-text flex-grow-1">@indie.Description</p>
                        <a href="@indie.Url" class="btn btn-primary mt-auto pulse-effect" target="_blank">
                            <i class="fas fa-gamepad mr-2"></i>Embark on Adventure
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="text-center mt-5">
    <h3 class="text-glow mb-4">Join the Utah Game Developers' Guild</h3>
    <p class="lead mb-4">Are you a game developer in Utah? Showcase your epic creations here!</p>
    <a href="#" class="btn btn-lg btn-outline-primary pulse-effect">
        <i class="fas fa-user-plus mr-2"></i>Apply to Join
    </a>
</div>
