@{
    ViewData["Title"] = "Resources";
}
<div class="container">
    <h2 class="text-center my-4">Game Development Resources</h2>

    <!-- Survey Section -->
    <div class="survey-section text-center mb-5">
        <h3 class="text-glow">Share Your Feedback</h3>
        <p class="mb-4">We value your input! Help us improve our resources by completing a quick survey.</p>
    </div>
    <!-- Centered Survey Embed -->
    <div class="survey-embed-container">
        <!-- SurveyMonkey Widget Script -->
        <script>
            (function(t,e,s,n){
                var o,a,c;t.SMCX=t.SMCX||[],e.getElementById(n)||(o=e.getElementsByTagName(s),a=o[o.length-1],c=e.createElement(s),c.type="text/javascript",c.async=!0,
