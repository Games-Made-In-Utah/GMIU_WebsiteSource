@model IGDA_Games_Made_In_Utah.Models.GameJam

<div class="container mt-5">
    <h1>Create New Game Jam</h1>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="Title">Game Jam Title</label>
            <input type="text" class="form-control" id="Title" asp-for="Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Description">Description</label>
            <textarea class="form-control" id="Description" asp-for="Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Host">Host</label>
            <input type="text" class="form-control" id="Host" asp-for="Host" />
            <span asp-validation-for="Host" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="StartDate">Start Date</label>
            <input type="datetime-local" class="form-control" id="StartDate" asp-for="StartDate" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="EndDate">End Date</label>
            <input type="datetime-local" class="form-control" id="EndDate" asp-for="EndDate" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="VotingEndDate">Voting End Date (Optional)</label>
            <input type="datetime-local" class="form-control" id="VotingEndDate" asp-for="VotingEndDate" />
            <span asp-validation-for="VotingEndDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="ImageUrl">Game Jam Image URL</label>
            <input type="text" class="form-control" id="ImageUrl" asp-for="ImageUrl" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Link">Game Jam Link</label>
            <input type="text" class="form-control" id="Link" asp-for="Link" />
            <span asp-validation-for="Link" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Create Game Jam</button>
    </form>
</div>
